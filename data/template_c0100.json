  "validation_rules": [
    {
      "rule_id": "V001",
      "description": "Own Funds = Tier 1 + Tier 2",
      "expression": "r0010 == r0020 + r0500",
      "severity": "error"
    },
    {
      "rule_id": "V002",
      "description": "Tier 1 = CET1 + AT1",
      "expression": "r0020 == r0030 + r0300",
      "severity": "error"
    },
    {
      "rule_id": "V003",
      "description": "CET1 = Instruments + Retained Earnings + AOCI + Other Reserves - Goodwill - Intangibles - DTA",
      "expression": "r0030 == r0040 + r0100 + r0110 + r0130 - r0200 - r0210 - r0220",
      "severity": "error"
    },
    {
      "rule_id": "V004",
      "description": "CET1 instruments breakdown must sum to total",
      "expression": "r0040 == r0050 + r0060 + r0070",
      "severity": "error"
    },
    {
      "rule_id": "V005",
      "description": "Own Funds must be non-negative",
      "expression": "r0010 >= 0",
      "severity": "warning"
    },
    {
      "rule_id": "V006",
      "description": "CET1 must be non-negative",
      "expression": "r0030 >= 0",
